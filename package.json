{
	"name": "umaxica-app-apex",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "$npm_execpath run build && vite preview",
		"deploy": "$npm_execpath run build && wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"format": "bunx @biomejs/biome format . --write",
		"lint": "bunx @biomejs/biome lint . --write",
		"check": "bunx @biomejs/biome check . --write",
		"type": "bunx tsgo --noEmit"
	},
	"dependencies": {
		"hono": "^4.10.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.3",
		"@cloudflare/vite-plugin": "^1.13.18",
		"vite": "^6.4.1",
		"vite-ssr-components": "^0.5.1",
		"wrangler": "^4.45.3"
	},
	"private": true,
	"workspaces": [
		"app",
		"com",
		"dev",
		"org",
		"net"
	]
}
